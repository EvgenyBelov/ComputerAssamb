<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tx_global"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="7dp"
        android:text="Заголовок"
        android:textAppearance="?android:textAppearance"
        android:textSize="18dp"
        />
    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/imjURL"
        android:layout_below="@+id/tx_global"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="30"
        android:id="@+id/tx_socket"
        android:layout_toRightOf="@+id/imjURL"
        android:layout_below="@+id/tx_global"
        android:text="Socket"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:textAppearance="?android:textAppearance"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tx_core"
        android:layout_toRightOf="@+id/imjURL"
        android:layout_below="@+id/tx_socket"
        android:text="Core"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:textAppearance="?android:textAppearance"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tx_freq"
        android:layout_toRightOf="@+id/imjURL"
        android:layout_below="@+id/tx_core"
        android:text="Freq"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:textAppearance="?android:textAppearance"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tx_cache"
        android:layout_toRightOf="@+id/imjURL"
        android:layout_below="@+id/tx_freq"
        android:text="Cache"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:textAppearance="?android:textAppearance"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tx_url"
        android:layout_toRightOf="@+id/imjURL"
        android:layout_below="@+id/tx_cache"
        android:text="Cache"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="5dp"
       android:visibility="invisible"

        />

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:id="@+id/btnURL"
        android:layout_below="@+id/imjURL"
        android:text="Market.yandex"
        android:layout_marginLeft="7dp"
        android:onClick="BtnURL"

        />
    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:id="@+id/btnADD"
        android:layout_below="@+id/imjURL"
        android:layout_toRightOf="@+id/btnURL"
        android:text="Выбрать"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:onClick="BtnADD"/>


</RelativeLayout>